<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'ON' if test_button.state == "normal" else "OFF"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        #on_press: root.pressed()

    DPEAButton:
        id: count = 0
        on_press: count.value = count+1
        text: "Click Me" if test_button.state == "normal" else str(int(count))
        size: 100, 100
        x: root.width * 0.25
        y:root.height * 0.5
        color: 1, 0, 0, 1




    #Label:

        #text: 'Clicks: ' + str(int(gcount.value))
        #size: 100,100
        #x:root.width*0.75
        #y:root.width*0.75
        #color: 1,0,0,1


    ImageButton:
        id: logo_image_button
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        on_press: root.pressed()