<MainScreen>:
    name: 'main'


    on_enter : root.start_Joystick_Thread()


    FloatLayout:
        size_hint: None, None


    Slider:
        id: slider
        min: 0
        max: 100
        step: 1
        x:root.width*0.01
        y:root.height*0.4
        orientation: 'horizontal'

    Label:
        text: str(slider.value)
        size: 100,100
        x:root.width*0.1
        y:root.height*0.45
        color: 1,0,0,1

    DPEAButton:
        id: test_button
        text: 'ON' if test_button.state == "normal" else "OFF"
        size: 100, 100
        x: root.width * 0.01
        y: root.height * 0.01
        color: 0, 1, 0, 1


    DPEAButton:
        id: clickme
        text: "Click Me " + root.string_count
        size: 300, 100
        x:root.width * 0
        y:root.height * 0.4
        color: 1, 0, 0, 1
        on_press: root.pressed()

        #on_press: root.motor_pressed()


    Label:
        id: cow
        text: "Motor Off" if root.condition else "Motor On"
        size: 100,100


    DPEAButton:
        id: chicken
        text: "Click me too "
        size: 250, 100
        x:root.width * 0
        y:root.height * 0.6
        color: 0, 0, 1, 1
        x:root.width*-0.1
        y:root.height*0.15
        color: 1,0,0,1


    ImageButton:
        id: logo_image_button
        source: "goat.jpg"
        size: 100, 100
        x: root.width * 0
        y: root.height * 0.2
        on_press: root.press()


    Label:
        id: my_x
        text: "X: " + str(root.x_axis)
        color: 0,0,0,1
        y: 50

    Label:
        id: my_y
        text: "Y: " + str(root.y_axis)
        color: 0,0,0,1
        y: 100





