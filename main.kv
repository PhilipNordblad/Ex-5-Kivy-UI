<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'ON' if test_button.state == "normal" else "OFF"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        #on_press: root.pressed()

    DPEAButton:
        id: clickme
        text: "Click Me " + root.string_count
        size: 250, 100
        x: root.width * 0.1
        y:root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.pressed()



    DPEAButton:
        id: chicken
        text: "Click me too "
        size: 300, 100
        x:root.width * 0.4
        y:root.height * 0.25
        color: 0, 0, 1, 1
        on_press: root.motor_pressed()


    Label:
        id: cow
        text: "Motor Off" if root.condition else "Motor On"
        size: 100,100
        x:root.width*0.3
        y:root.height*0.3
        color: 1,0,0,1

    Slider:
        id: slider
        min: 0
        max: 100
        step: 1
        x:root.width*0.1
        y:root.height*0.000000001
        orientation: 'horizontal'

    Label:
        text: str(slider.value)
        size: 100,100
        x:root.width*0.3
        y:root.height*0.4



    ImageButton:
        id: logo_image_button
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        on_press: root.pressed()